package aula_01;

public class Aula01 {
	public static void main(String[] args) {
		double media;
		media = 8.5;
		final double pi = 3.14;
		
		// tipos de dados inteiros
		int idade = 20;
		byte num = 9;
		short caixas = 10;
		long valor = 1212313;
		
		// casting: transformar um tipo de dado em outro
		// pontos flutuantes
		float valor2 = (float)4.6;
		double valor3 = 54.9;
		
		// caracter
		char letra = 'A';
		
		// true ou false minusculos
		boolean status = true;
		
		// Textos, mas por ser uma classe permite o uso de m√©todos
		String texto = "Hello world!!";
		System.out.println(texto);
	}
}
